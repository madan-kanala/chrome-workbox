{
  "compilerOptions": {
    "lib": ["es2017", "webworker"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "strictNullChecks": true
  },
  "include": [
    "infra/type-overrides.d.ts",
    "packages/*/src/**/*.ts"
  ]
}
