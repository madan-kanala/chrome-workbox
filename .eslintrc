{
  "extends": ["eslint:recommended", "google"],
  "env": {
    "serviceworker": true,
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "globals": {
    "BroadcastChannel": false,
    "WorkboxSW": false,
    "workbox": false
  },
  "rules": {
    "no-tabs": 2,
    "linebreak-style": 0,
  }
}
